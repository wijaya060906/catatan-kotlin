<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="blue_young">#3572EF</color>
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <color name="primary_color">#00C988</color>
    <color name="grey">#888888</color>
    <color name="grey_light">#F0F0F0</color>
    <color name="blue">#050C9C</color>
    <color name="gray">#808080</color>
    <color name="bg">#F8F8FF</color>
    <color name="black_light">#2d2d2d</color>

    <style name="rounded_card">
        <item name="android:background">@drawable/rounded</item>
    </style>
    <style name="button_learn">
        <item name="android:background">@drawable/buttonwhite</item>
    </style>
    <style name="ButtonWhite">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="search" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/search_bg</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="buttonPlus" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="buttonPluss">
        <item name="android:background">@drawable/buttonpluss</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="editext">
        <item name="android:background">@drawable/edittext</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="rounded">
        <item name="android:radius">@dimen/cardview_default_radius</item>
    </style>

    <style name="blueBorder">
        <item name="android:background">@drawable/blue_border</item>
    </style>

    <style name="searchh">
        <item name="android:background">@drawable/search</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button_shadow</item>
    </style>
</resources>